# DALRN Environment Configuration
# Copy this file to .env and update with your specific values

# Database Configuration
POSTGRES_DB=dalrn
POSTGRES_USER=dalrn
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL=postgresql://dalrn:change_me_in_production@postgres:5432/dalrn

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://anvil:8545
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
CONTRACT_ADDRESS=

# IPFS Configuration
IPFS_API_URL=http://ipfs:5001
IPFS_GATEWAY_URL=http://ipfs:8080

# Service Ports
GATEWAY_PORT=8000
SEARCH_PORT=8100
FHE_PORT=8200
NEGOTIATION_PORT=8300
FL_PORT=8400
AGENTS_PORT=8500

# PoDP Configuration
PODP_ENABLED=true
PODP_VALIDATION_STRICT=true
PODP_RECEIPT_CHAIN_MAX_LENGTH=1000

# Epsilon Ledger Configuration
EPSILON_BUDGET_DEFAULT=1.0
EPSILON_BUDGET_SEARCH=0.01
EPSILON_BUDGET_FHE=0.05
EPSILON_BUDGET_NEGOTIATION=0.02
EPSILON_BUDGET_FL=1.0
EPSILON_BUDGET_AGENTS=0.1
EPSILON_OVERFLOW_PREVENTION=true

# Service Discovery
SERVICE_DISCOVERY_ENABLED=true
GATEWAY_SERVICE_URL=http://gateway:8000
SEARCH_SERVICE_URL=http://search:8100
FHE_SERVICE_URL=http://fhe:8200
NEGOTIATION_SERVICE_URL=http://negotiation:8300
FL_SERVICE_URL=http://fl:8400
AGENTS_SERVICE_URL=http://agents:8500

# Security Configuration
JWT_SECRET=change_me_in_production_use_long_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY=change_me_in_production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_change_in_production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/app/logs
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_BACKUP_COUNT=10

# Performance Configuration
WORKER_COUNT=4
THREAD_POOL_SIZE=10
CONNECTION_POOL_SIZE=20
REQUEST_TIMEOUT=30
CACHE_TTL=3600

# FAISS Configuration (Search Service)
FAISS_INDEX_PATH=/app/indexes
FAISS_DIMENSION=768
FAISS_NLIST=100
FAISS_NPROBE=10

# FHE Configuration
CKKS_KEY_PATH=/app/keys
CKKS_POLY_MODULUS_DEGREE=8192
CKKS_COEFF_MOD_BIT_SIZES=[60,40,40,60]
CKKS_SCALE=2^40

# Nash Equilibrium Configuration (Negotiation Service)
NASH_MAX_ITERATIONS=1000
NASH_CONVERGENCE_THRESHOLD=0.0001
NASH_SOLVER=lemke_howson

# Federated Learning Configuration
FL_ROUNDS=10
FL_MIN_CLIENTS=3
FL_AGGREGATION_STRATEGY=fedavg
FL_MODEL_PATH=/app/models
FL_CHECKPOINT_INTERVAL=5

# SOAN Configuration (Agents Service)
SOAN_MAX_AGENTS=100
SOAN_COORDINATION_PROTOCOL=consensus
SOAN_MESSAGE_QUEUE_SIZE=1000
SOAN_HEARTBEAT_INTERVAL=30

# Development/Testing
DEBUG=false
TESTING=false
MOCK_EXTERNAL_SERVICES=false

# Feature Flags
FEATURE_SEARCH_ENABLED=true
FEATURE_FHE_ENABLED=true
FEATURE_NEGOTIATION_ENABLED=true
FEATURE_FL_ENABLED=true
FEATURE_AGENTS_ENABLED=true